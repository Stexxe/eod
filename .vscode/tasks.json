{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "configure-cmake-debug",
			"type": "shell",
			"command": "emcmake cmake -DCMAKE_BUILD_TYPE=Debug -S . -B build",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "emmake-build",
			"type": "shell",
			"command": "emmake make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": "$gcc"
		}
	]
}